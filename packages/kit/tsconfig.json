{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "strict": true,
    "rootDir": "src",
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "webpack",
    "jest"
  ],
  "typeRoots": ["node_modules/@types", "src/types"]
}
